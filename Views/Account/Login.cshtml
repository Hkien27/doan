        <div class="login-footer">
            <div class="stat-item">
                <p class="stat-label">MILEAGE ACCUMULATED</p>
                <p class="stat-value">45.508.797 km</p>
            </div>
            <div class="stat-item">
                <p class="stat-label">CO2 REDUCTION</p>
                <p class="stat-value">206.762.230 kg</p>
            </div>
            <div class="stat-item">
                <p class="stat-label">AIR CLEANED</p>
                <p class="stat-value">~2.275.441 trees</p>
            </div>
        </div> *@
    </div>
</body>
</html>
