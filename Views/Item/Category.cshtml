@model IEnumerable<SecondHandSharing.Models.Item>
@{
    ViewData["Title"] = ViewBag.CategoryName ?? "Danh mục";
}

<div class="container my-4">
    <!-- Banner + tiêu đề -->
    <div class="mb-4 text-center">
        @if (!string.IsNullOrEmpty(ViewBag.Banner))
        {
            <img src="@ViewBag.Banner"
                 alt="@ViewBag.CategoryName"
                 class="img-fluid rounded mb-3" />
        }
        <h2 class="fw-bold">@ViewBag.CategoryName</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Chưa có sản phẩm nào trong danh mục này.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-6 col-md-3 col-lg-2">
                    <div class="card h-100 shadow-sm border-0">
                        <a asp-action="Details"
                           asp-route-id="@item.ItemId"
                           class="text-decoration-none text-dark">

                            <img src="@item.Image"
                                 class="card-img-top"
                                 style="height:140px;object-fit:cover;" />

                            <div class="card-body p-2">
                                <div class="small text-truncate fw-semibold">
                                    @item.Title
                                </div>

                                <div class="text-danger fw-bold small mt-1">
                                    @(item.IsFree ? "Miễn phí"
                                                  : item.Price.ToString("N0") + " đ")
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
