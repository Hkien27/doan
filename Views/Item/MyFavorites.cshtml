@using System.Security.Claims
@model IEnumerable<SecondHandSharing.Models.Favorite>

@{
    ViewData["Title"] = "Sản phẩm yêu thích";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">❤️ Sản phẩm yêu thích</h2>

        @if (Model.Any())
        {
            <span class="text-muted">
                Tổng: <strong>@Model.Count()</strong> sản phẩm
            </span>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Bạn chưa thích sản phẩm nào. Hãy khám phá và thêm sản phẩm vào danh sách yêu thích nhé!
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var fav in Model)
            {
                var item = fav.Item;

                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card shadow-sm h-100 favorite-card">
                        <!-- Ảnh sản phẩm -->
                        <div class="ratio ratio-4x3">
                            <img src="@Url.Content(item.Image ?? "~/images/no-image.png")"
                                 alt="@item.Title"
                                 class="favorite-img-top" />
                        </div>

                        <div class="card-body d-flex flex-column">
                            <!-- Tiêu đề -->
                            <h6 class="card-title fw-semibold text-truncate"
                                title="@item.Title">
                                @item.Title
                            </h6>

                            <!-- Giá -->
                            <div class="mb-1">
                                <p class="card-text text-danger fw-bold">
    @if (item.IsFree)
    {
        @:Miễn phí
    }
    else
    {
        @item.Price.ToString("N0") @:đ
    }
</p>

                            </div>
                            <div class="mb-1">
                            
                            </div>
                            <!-- Địa chỉ (nếu có) -->
                            @if (!string.IsNullOrWhiteSpace(item.Address))
                            {
                                <div class="text-muted small mb-2 text-truncate">
                                    <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                    @item.Address
                                </div>
                            }

                            <div class="mt-auto">
                                <!-- Nút chat với người bán -->
                                @if (User.Identity.IsAuthenticated
                                     && item.UserId != int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)!.Value))
                                {
                                    <a asp-controller="Chat"
                                       asp-action="StartChat"
                                       asp-route-targetUserId="@item.UserId"
                                       asp-route-itemId="@item.ItemId"
                                       class="btn btn-outline-warning btn-sm w-100 mb-2">
                                        <i class="bi bi-chat-dots me-1"></i> Chat với người bán
                                    </a>
                                }

                                <!-- Nút xem chi tiết -->
                                <a asp-controller="Item"
                                   asp-action="Details"
                                   asp-route-id="@item.ItemId"
                                   class="btn btn-primary btn-sm w-100 mb-2">
                                    <i class="bi bi-eye me-1"></i> Xem chi tiết
                                </a>

                                <!-- Nút bỏ yêu thích (gọi lại ToggleFavorite) -->
                                <form asp-controller="Item"
                                      asp-action="ToggleFavorite"
                                      asp-route-itemId="@item.ItemId"
                                      method="post">
                                    <button type="submit"
                                            class="btn btn-outline-danger btn-sm w-100">
                                        <i class="bi bi-heartbreak me-1"></i> Bỏ yêu thích
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .favorite-card {
        border: none;
        border-radius: 14px;
        overflow: hidden;
        transition: all 0.25s ease;
    }

    .favorite-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.12);
    }

    .favorite-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
