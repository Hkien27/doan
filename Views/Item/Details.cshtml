            <div class="container-fluid">
        <h1 class="m-0">@Model.Title</h1>
        <small class="text-muted">@Model.Category • @Model.Condition</small>
    </div>
                <div class="product-price">@Model.Price.ToString("N0") đ</div>
                
                <div class="d-flex align-items-center gap-2 mb-3">
                    <i class="bi bi-geo-alt-fill text-danger"></i>
                    <span class="text-muted">@Model.Address</span>
                </div>

                <div class="d-flex align-items-center gap-2 mb-4">
                    <i class="bi bi-clock-history text-secondary"></i>
                    <span class="text-muted">Đăng ngày @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                </div>

                <!-- Action buttons với gradient màu vàng -->
                <div class="action-buttons">
                    @if (User.Identity.IsAuthenticated && Model.UserId != int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)!.Value))
                    {
                        <a asp-controller="Chat" asp-action="StartChat" asp-route-targetUserId="@Model.UserId" asp-route-itemId="@Model.ItemId" class="btn btn-primary-action">
                            <i class="bi bi-chat-dots me-2"></i>Chat với người bán
                        </a>
                    }
                    else if (!User.Identity.IsAuthenticated)
                    {
                        <button class="btn btn-primary-action" disabled>
                            <i class="bi bi-chat-dots me-2"></i>Chat với người bán
                        </button>
                    }

                    <button type="button" id="phoneBtn" class="btn btn-secondary-action" data-full="@phone" data-mask="@maskedPhone">
                        <i class="bi bi-telephone me-2"></i>Hiện số @maskedPhone
                    </button>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-action="ToggleFavorite" asp-route-itemId="@Model.ItemId" class="d-inline">
                            <button type="submit" class="btn btn-secondary-action">
                                <i class="bi bi-heart me-2"></i>Thêm yêu thích
                            </button>
                        </form>
                    }
                </div>

                <!-- Seller card cải thiện -->
                <hr class="my-4" />
                <h6 class="section-title mb-3"><i class="bi bi-person-circle"></i>Thông tin người bán</h6>
                
                @{
                    var sellerAvatar = "/images/avatar_default.png";
                    if (Model.User != null && !string.IsNullOrEmpty(Model.User.AvatarPath))
                    {
                        sellerAvatar = Model.User.AvatarPath;
                    }
                }

                <div class="seller-card">
                    <img src="@sellerAvatar" alt="Avatar" class="seller-avatar" />
                    <div class="seller-info">
                        <h6>@Model.User?.FullName</h6>
                        <small>@Model.User?.Email</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mô tả chi tiết cải thiện -->
    <div class="card-modern mt-4 p-4">
        <h5 class="section-title"><i class="bi bi-info-circle"></i>Mô tả chi tiết</h5>
        <div class="description-box">@Model.Description</div>
    </div>

    <!-- Thông số kỹ thuật cải thiện -->
    <div class="card-modern mt-4 p-4">
        <h5 class="section-title"><i class="bi bi-gear-fill"></i>Thông số kỹ thuật</h5>
        <div class="spec-grid">
            <div class="spec-item">
                <strong>Danh mục</strong>
                <span>@Model.Category</span>
            </div>
            <div class="spec-item">
                <strong>Tình trạng</strong>
                <span>@Model.Condition</span>
            </div>
            <div class="spec-item">
                <strong>Trạng thái</strong>
                <span>@Model.Status</span>
            </div>
            <div class="spec-item">
                <strong>Địa chỉ</strong>
                <span>@Model.Address</span>
            </div>
            <div class="spec-item">
                <strong>Ngày đăng</strong>
                <span>@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
            </div>
        </div>
    </div>

    <!-- Bình luận/Chat cải thiện -->
    <div class="card-modern mt-4 p-4">
        <h5 class="section-title"><i class="bi bi-chat-dots"></i>Bình luận sản phẩm</h5>

        <div class="comment-box" id="commentChatBox">
            @if (Model.Comments != null && Model.Comments.Any())
            {
                @foreach (var c in Model.Comments)
                {
                    var isMe = User.Identity.IsAuthenticated && c.UserId == int.Parse(User.FindFirst(ClaimTypes.NameIdentifier).Value);

                    <div class="comment-item">
                        <div class="comment-author @(isMe ? "text-end" : "text-start")">
                            @(isMe ? "Bạn" : c.User.FullName) • @c.CreatedAt.ToString("HH:mm dd/MM/yyyy")
                        </div>
                        <div class="@(isMe ? "text-end" : "text-start")">
                            <span class="comment-content @(isMe ? "comment-mine" : "comment-other")">@c.Content</span>
                        </div>
                        @if (isMe)
                        {
                            <form asp-action="DeleteComment" asp-route-commentId="@c.CommentId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-link text-danger mt-2">Xoá</button>
                            </form>
                        }
                    </div>
                }
            }
            else
            {
                <p class="text-muted text-center py-3">Chưa có bình luận nào</p>
            }
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <form method="post" asp-action="PostComment" asp-route-itemId="@Model.ItemId">
                <div class="input-group">
                    <input name="content" class="form-control" placeholder="Nhập bình luận..." required />
                    <button class="btn btn-primary-action" type="submit">
                        <i class="bi bi-send me-2"></i>Gửi
                    </button>
                </div>
            </form>
        }
        else
        {
            <p class="text-muted text-center">Bạn cần <a asp-controller="Account" asp-action="Login">đăng nhập</a> để bình luận.</p>
        }
    </div>
    </div>

    <!-- Sản phẩm liên quan cải thiện -->
    @if (relatedItems != null && relatedItems.Any())
    {
        <div class="card-modern mt-4 p-4">
            <h5 class="section-title"><i class="bi bi-grid-3x3-gap-fill"></i>Sản phẩm liên quan</h5>
            <div class="related-grid">
                @foreach (var r in relatedItems)
                {
                    var rImg = string.IsNullOrEmpty(r.Image) ? "/images/no-image.png" : (r.Image.StartsWith("/") ? r.Image : "/images/" + r.Image);

                    <a asp-action="Details" asp-route-id="@r.ItemId" class="related-card">
                        <img src="@Url.Content(rImg)" class="related-image" alt="@r.Title" />
                        <div class="related-body">
                            <div class="related-title">@r.Title</div>
                            <div class="related-price">@r.Price.ToString("N0") đ</div>
                            <div class="related-date">@r.CreatedAt.ToString("dd/MM/yyyy")</div>
                        </div>
                    </a>
                }
            </div>
        </div>
    }

    <div class="mt-4 mb-5 text-center">
        <a asp-action="Index" class="btn btn-secondary-action px-5">
            <i class="bi bi-arrow-left-circle me-2"></i>Quay lại danh sách
        </a>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const btn = document.getElementById("phoneBtn");
        if (!btn) return;

        let showFull = false;
        const full = btn.getAttribute("data-full") || "Chưa cập nhật";
        const mask = btn.getAttribute("data-mask") || full;

        btn.addEventListener("click", function () {
            if (!showFull) {
                btn.innerHTML = '<i class="bi bi-telephone me-2"></i>Ẩn số ' + full;
                showFull = true;
            } else {
                btn.innerHTML = '<i class="bi bi-telephone me-2"></i>Hiện số ' + mask;
                showFull = false;
            }
        });

        // Auto scroll to bottom cho comment box
        const commentBox = document.getElementById("commentChatBox");
        if (commentBox) {
            commentBox.scrollTop = commentBox.scrollHeight;
        }
    });
</script>
