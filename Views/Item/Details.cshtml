@using System.Security.Claims
@model SecondHandSharing.Models.Item
@using SecondHandSharing.Models

@{
    Layout = "_Layout";
    ViewData["Title"] = "Chi tiết sản phẩm";

    var phone = Model.User?.PhoneNumber ?? "Chưa cập nhật";
    string maskedPhone = phone;

    if (!string.IsNullOrWhiteSpace(Model.User?.PhoneNumber))
    {
        var p = Model.User.PhoneNumber.Trim();
        if (p.Length >= 6)
        {
            var visible = p.Substring(0, 6);
            maskedPhone = visible + "****";
        }
    }
    
    string mainImage = string.IsNullOrEmpty(Model.Image)
        ? "/images/no-image.png"
        : (Model.Image.StartsWith("/") ? Model.Image : "/images/" + Model.Image);

    var relatedItems = ViewBag.RelatedItems as List<Item>;
}

<style>
    /* Thêm CSS cho thiết kế gradient vàng cam kiểu choTÔT */
    :root {
        --primary-yellow: #ffc107;
        --primary-orange: #ff8800;
        --primary-dark: #ff6600;
        --light-bg: #fafafa;
        --border-light: #e8e8e8;
    }

    body {
        background-color: var(--light-bg);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }

    .product-header {
        background: linear-gradient(135deg, var(--primary-yellow) 0%, #ffd633 100%);
        padding: 20px 0;
        margin-bottom: 30px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .product-header h1 {
        color: #222;
        font-weight: 700;
        margin-bottom: 0;
    }

    .card-modern {
        background: #fff;
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.06);
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .card-modern:hover {
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .product-price {
        font-size: 28px;
        font-weight: 700;
        color: var(--primary-orange);
        margin: 16px 0;
    }

    .btn-primary-action {
        background: linear-gradient(135deg, var(--primary-yellow) 0%, #ffd633 100%);
        color: #000;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        padding: 12px 20px;
        transition: all 0.3s ease;
    }

    .btn-primary-action:hover {
        background: linear-gradient(135deg, var(--primary-orange) 0%, #ff9900 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255,136,0,0.3);
        color: #000;
    }

    .btn-secondary-action {
        background: #f5f5f5;
        color: #222;
        border: 1px solid var(--border-light);
        border-radius: 12px;
        font-weight: 600;
        padding: 12px 20px;
        transition: all 0.3s ease;
    }

    .btn-secondary-action:hover {
        background: #fff;
        border-color: var(--primary-yellow);
        color: var(--primary-orange);
    }

    .seller-card {
        background: linear-gradient(135deg, #fff 0%, #fafafa 100%);
        border: 1px solid var(--border-light);
        border-radius: 12px;
        padding: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .seller-avatar {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--primary-yellow);
    }

    .seller-info h6 {
        margin: 0;
        font-weight: 600;
        color: #222;
    }

    .seller-info small {
        color: #999;
        display: block;
        margin-top: 4px;
    }

    .image-gallery {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        background: #f5f5f5;
        padding: 16px;
    }

    .main-image {
        width: 100%;
        height: 400px;
        object-fit: contain;
        border-radius: 12px;
        background: #fff;
    }

    .thumbnail-container {
        display: flex;
        gap: 8px;
        margin-top: 12px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .thumb-img {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
        cursor: pointer;
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

    .thumb-img:hover {
        border-color: var(--primary-yellow);
        transform: scale(1.05);
    }

    .spec-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-top: 16px;
    }

    .spec-item {
        padding: 12px;
        background: #fafafa;
        border-radius: 8px;
        border-left: 4px solid var(--primary-yellow);
    }

    .spec-item strong {
        color: #222;
        display: block;
        margin-bottom: 4px;
    }

    .spec-item span {
        color: #666;
        font-size: 14px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 700;
        color: #222;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-title i {
        color: var(--primary-orange);
        font-size: 20px;
    }

    .description-box {
        color: #666;
        line-height: 1.6;
        padding: 16px;
        background: #fafafa;
        border-radius: 12px;
        border-left: 4px solid var(--primary-yellow);
    }

    .comment-box {
        max-height: 400px;
        overflow-y: auto;
        padding: 16px;
        background: #fafafa;
        border-radius: 12px;
        margin-bottom: 16px;
    }

    .comment-item {
        margin-bottom: 16px;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--border-light);
    }

    .comment-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }

    .comment-author {
        font-weight: 600;
        color: #222;
        margin-bottom: 4px;
        font-size: 14px;
    }

    .comment-content {
        padding: 10px 12px;
        border-radius: 8px;
        display: inline-block;
        max-width: 80%;
        word-wrap: break-word;
    }

    .comment-mine {
        background: linear-gradient(135deg, var(--primary-yellow) 0%, #ffd633 100%);
        color: #222;
        float: right;
    }

    .comment-other {
        background: #fff;
        color: #333;
        border: 1px solid var(--border-light);
        float: left;
    }

    .related-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 16px;
        margin-top: 16px;
    }

    .related-card {
        border-radius: 12px;
        overflow: hidden;
        background: #fff;
        border: 1px solid var(--border-light);
        transition: all 0.3s ease;
        text-decoration: none;
        color: inherit;
    }

    .related-card:hover {
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        transform: translateY(-4px);
    }

    .related-image {
        width: 100%;
        height: 160px;
        object-fit: cover;
        background: #f5f5f5;
    }

    .related-body {
        padding: 12px;
    }

    .related-title {
        font-weight: 600;
        color: #222;
        margin-bottom: 8px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .related-price {
        color: var(--primary-orange);
        font-weight: 700;
        margin-bottom: 4px;
    }

    .related-date {
        font-size: 12px;
        color: #999;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin: 20px 0;
    }

    @@media (max-width: 768px) {
        .main-image {
            height: 300px;
        }

        .product-price {
            font-size: 24px;
        }

        .spec-grid {
            grid-template-columns: 1fr;
        }

        .related-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-buttons button,
        .action-buttons a {
            width: 100%;
        }

        .comment-content {
            max-width: 100%;
        }
    }
</style>

