    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Gợi ý tìm kiếm (dùng ItemController.SearchSuggestions: trả về List<string>)
        const searchInput = document.getElementById("searchInput");
        const suggestionList = document.getElementById("suggestionList");

        if (searchInput) {
            searchInput.addEventListener("input", function () {
                const query = this.value.trim();
                suggestionList.innerHTML = "";

                if (query.length === 0) return;

                fetch(`/Item/SearchSuggestions?keyword=${encodeURIComponent(query)}`)
                    .then(res => res.json())
                    .then(data => {
                        suggestionList.innerHTML = "";

                        if (!data || data.length === 0) {
                            suggestionList.innerHTML =
                                "<li class='list-group-item text-muted text-center'>Không có gợi ý</li>";
                            return;
                        }

                        data.forEach(title => {
                            const li = document.createElement("li");
                            li.className = "list-group-item list-group-item-action";
                            li.textContent = title;
                            li.addEventListener("click", () => {
                                // Chuyển sang trang tìm kiếm với keyword = title
                                window.location.href =
                                    `/Item/Search?keyword=${encodeURIComponent(title)}`;
                            });
                            suggestionList.appendChild(li);
                        });
                    })
                    .catch(err => console.error(err));
            });
        }

        // Đóng gợi ý khi click bên ngoài
        document.addEventListener("click", function (e) {
            const box = document.querySelector(".search-box");
            if (!box || !box.contains(e.target)) {
                suggestionList.innerHTML = "";
            }
        });

        // Khởi tạo tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
