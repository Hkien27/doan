@model IEnumerable<SecondHandSharing.Models.Item>

<h4>Kết quả tìm kiếm cho "@ViewBag.Keyword"</h4>
<div class="row">
    @if (!Model.Any())
    {
        <p>Không tìm thấy sản phẩm nào.</p>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <img src="~/images/@item.Image" class="card-img-top" style="height:200px; object-fit:cover;">
                    <div class="card-body">
                        <h6>@item.Title</h6>
                        <a href="/Product/Detail/@item.ItemId" class="btn btn-sm btn-outline-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
